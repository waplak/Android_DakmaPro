<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dakma.waplak.lk.dakmapro">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="dakma.waplak.lk.SplashActivity"
            android:theme="@style/SplashTheme"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name="dakma.waplak.lk.LoginActivity"
            android:label="@string/title_activity_nevigation"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:screenOrientation="portrait"
            android:name="dakma.waplak.lk.NevigationActivity"
            android:label="@string/title_activity_nevigation"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>